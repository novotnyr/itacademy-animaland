<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender 
		name="STDOUT" 
		class="ch.qos.logback.core.ConsoleAppender">
		
		<encoder>
			<pattern>%d | %m%n</pattern>
		</encoder>
		
	</appender>

	<logger 
		name="com.ibm.itacademy"
		level="ALL">
		
		<appender-ref ref="STDOUT" />
		
	</logger>
		
</configuration>